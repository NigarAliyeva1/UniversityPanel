@model List<UserVM>


<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <h4 class="card-title">Users</h4>
                    <a class="mdi mdi-plus-circle icon-lg" asp-action="Create"></a>
                </div>
                <table id="myTable" class="table">
                    <thead>
                        <tr>

                            <th>
                                Image
                            </th>
                            <th>
                                FullName
                            </th>
                            <th>
                                UserName
                            </th>
                            <th>
                                Email
                            </th>
                            <th>
                                Role
                            </th>
                            <th>
                                Status
                            </th>
                            <th  class="d-flex justify-content-end">
                                Action
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (UserVM item in Model)
                        {
                            <tr>
                                <td>
                                    <img src="~/assets/images/@item.Image" />
                                </td>
                                <td>
                                    @item.FullName
                                </td>
                                <td>
                                    @item.UserName
                                </td>
                                <td>
                                    @item.Email
                                </td>
                                <td>
                                    @item.Role
                                </td>
                                <td>
                                    @if (item.IsDeactive)
                                    {
                                        <span class="text-danger">Passive</span>
                                    }
                                    else
                                    {
                                        <span class="text-success">Active</span>

                                    }
                                </td>
                                <td>
                                    <div class="d-flex justify-content-end">
                                        <a asp-action="ResetPassword" asp-route-id="@item.Id" style="width:50px" class="mdi mdi-key-variant icon-md"></a>
                                        <a asp-action="Update" asp-route-id="@item.Id" style="width:50px" class="mdi mdi-wrench icon-md text-info"></a>
                                       
                                        @if (item.UserName != User.Identity.Name)
                                        {
                                            <a asp-action="ChangeRole" asp-route-id="@item.Id" style="width:50px" class="mdi mdi-account-convert icon-md text-primary"></a>
                                        }
                                        else
                                        {
                                            <a style="width:50px" class="mdi mdi-account-convert icon-md text-dark"></a>

                                        }

                                        @if (item.UserName != User.Identity.Name)
                                        {
                                            
                                            @if (item.IsDeactive)
                                            {
                                                <a asp-action="Activity" asp-route-id="@item.Id" style="width:50px" class="mdi mdi-check-circle-outline icon-md text-success"></a>
                                            }
                                            else
                                            {
                                               @* <a asp-action="Delete" asp-route-id="@item.Id" style="width:50px" class="mdi mdi-delete icon-md text-danger"></a>*@
                                                <a asp-action="Activity" asp-route-id="@item.Id" style="width:50px" class="mdi mdi-close-circle-outline icon-md text-danger"></a>
                                               
                                            }
                                        }
                                        else
                                        {
                                            @*<a style="width:50px" class="mdi mdi-delete icon-md text-dark"></a>*@
                                            if (item.IsDeactive)
                                            {
                                                <a style="width:50px" class="mdi mdi-check-circle-outline icon-md text-dark"></a>
                                            }
                                            else
                                            {
                                                <a style="width:50px" class="mdi mdi-close-circle-outline icon-md text-dark"></a>
                                            }
                                        }
                                    </div>
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



<script type="text/javascript">
    $(document).ready(function () {
        $('#myTable').DataTable({
            dom: 'Bfrtip',
            buttons: [
                'copy', 'csv', 'excel', 'pdf', 'print'
            ]
        });
    });

</script>