@model List<StudentsAttendance>


<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div>
                    <h4 class="card-title">Students Attendance</h4>
                   
                </div>
                <table id="myDepartments" class="table">

                    <thead>
                        <tr>

                            <th>Students</th>
                            <th>Today</th>

                            @*@foreach (StudentsAttendance studentsAttendance in Model)
                            {
                                <th>@studentsAttendance.Date.ToString("MM/dd/yyyy")</th>

                            }*@
                        </tr>

                    </thead>
                    <tbody>
                        
                            @foreach (StudentsAttendance studentsAttendance in Model)
                            {
                             <tr>   
                                <td>@studentsAttendance.Student.FullName</td>
                          
                          
                                <td>

                                    @if (studentsAttendance.IsChecked)
                                    {
                                        <a asp-action="Activity" asp-route-id="@studentsAttendance.Id" style="width:30px" class="mdi mdi-toggle-switch-off icon-md text-success"></a>
                                    }
                                    else
                                    {

                                        <a asp-action="Activity" asp-route-id="@studentsAttendance.Id" style="width:30px" class="mdi mdi-toggle-switch icon-md text-danger"></a>

                                    }

                                </td>
                            </tr>
                            }
                        
                    </tbody>

                </table>
                @*  <button type="submit" class="btn btn-gradient-primary me-2">Submit</button>*@
                <a asp-action="Index" class="btn btn-inverse-dark btn-fw">Go back</a>

            </div>
        </div>
    </div>
</div>



<script type="text/javascript">
    $(document).ready(function () {
        $('#myDepartments').DataTable({
            dom: 'Bfrtip',
            buttons: [
                'copy', 'csv', 'excel', 'pdf', 'print'
            ]
        });
    });

</script>