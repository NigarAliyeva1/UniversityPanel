

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-start">
                    <h4 class="card-title">@ViewBag.Group</h4>
                </div>
               


                <table class="table" id="myTable">
                    <thead>
                        <tr>

                            <th>Full Name</th>
                            <th>Email</th>
                            <th>Quiz</th>
                            <th>Midterm</th>
                            <th>Presentation</th>
                            <th>Exam</th>
                            <th class="text-end">Actions</th>


                        </tr>

                    </thead>
                    <tbody>
                        @foreach (var student in ViewBag.Students)
                        {
                            <tr>
                                <td>@student.Student.FullName</td>
                                <td>@student.Student.Email</td>
                                <td>
                                    @if (true)
                                    {
                                        <div>
                                            <a asp-action="Grades" asp-route-id="@student.Student.Id" style="width:50px" class="mdi mdi-download icon-md text-info"></a>

                                        </div>
                                        <div class="d-flex justify-content-end">
                                            <a asp-action="Activate" asp-route-id="@student.Student.Id" style="width:50px" class="mdi mdi-download icon-md text-info"></a>
                                        </div>
                                    }
                                </td>

                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



<script type="text/javascript">
    $(document).ready(function () {
        $('#myTable').DataTable({
            dom: 'Bfrtip',
            buttons: [
                'copy', 'csv', 'excel', 'pdf', 'print'
            ]
        });
    });

</script>



