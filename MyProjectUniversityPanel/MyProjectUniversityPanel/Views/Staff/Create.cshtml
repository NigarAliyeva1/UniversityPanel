@model Staff
<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Create Staff</h4>
                <p class="card-description"></p>
                <form class="forms-sample" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="Photo"></label>
                        <input accept="image/*" asp-for="Photo" class="form-control">
                        <span asp-validation-for="Photo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="FullName" class="form-control form-control-lg" placeholder="Full Name">
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input asp-for="Birthday" name="birthday" type="date" class="form-control form-control-lg">
                        <span asp-validation-for="Birthday" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <select class="form-control" name="genId">
                            @foreach (Gender gen in ViewBag.Genders)
                            {
                                <option value="" selected disabled hidden>--Select Gender--</option>
                                <option value="@gen.Id">@gen.Type</option>
                            }
                        </select>
                    </div>

                    <div class="form-group">
                        <input asp-for="Designation" class="form-control form-control-lg" placeholder="Designation">
                        <span asp-validation-for="Designation" class="text-danger"></span>
                    </div>


                    <div class="form-group">
                        <input asp-for="Education" type="text" class="form-control form-control-lg" placeholder="Education">
                        <span asp-validation-for="Education" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="Email" class="form-control form-control-lg" placeholder="Email">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="Number" type="number" class="form-control form-control-lg" placeholder="Mobile Number">
                        <span asp-validation-for="Number" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="Address" class="form-control form-control-lg" placeholder="Address">
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="UploadFile">Upload File</label>
                        <input asp-for="UploadFile" class="form-control">
                        <span asp-validation-for="UploadFile" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-gradient-primary me-2">Submit</button>
                    <a asp-action="Index" class="btn btn-inverse-dark btn-fw">Go back</a>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
