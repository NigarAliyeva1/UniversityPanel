@model List<StudentsAttendance>


<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <h4 class="card-title">Students Attendance</h4>
                    <a class="mdi mdi-plus-circle icon-lg" asp-action="Create"></a>
                </div>
                <table id="myDepartments" class="table">
                    <thead>
                        <tr>

                            <th>Students</th>
                            @foreach (StudentsAttendance studentsAttendance in Model)
                            {

                                <th>@studentsAttendance.Date.ToString("MM/dd/yyyy")</th>

                            }
                        </tr>

                    </thead>
                    <tbody>


                        @foreach (StudentGroup studentGroup in ViewBag.StudentGroups)
                        {
                            <tr>
                                <td>@studentGroup.Student.FullName</td>

                            </tr>
                        }
                        @foreach (StudentsAttendance studentsAttendance in Model)
                        {
                            <tr>
                                <td>
                                    <div>


                                        @if (studentsAttendance.IsChecked)
                                        {
                                            <a asp-action="Activity" asp-route-id="@studentsAttendance.Id" style="width:30px" class="mdi mdi-toggle-switch-off icon-md text-danger"></a>
                                        }
                                        else
                                        {

                                            <a asp-action="Activity" asp-route-id="@studentsAttendance.Id" style="width:30px" class="mdi mdi-toggle-switch icon-md text-success"></a>

                                        }

                                    </div>
                                </td>

                            </tr>


                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



<script type="text/javascript">
    $(document).ready(function () {
        $('#myDepartments').DataTable({
            dom: 'Bfrtip',
            buttons: [
                'copy', 'csv', 'excel', 'pdf', 'print'
            ]
        });
    });

</script>