@model Group
<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Update Groups</h4>
                <p class="card-description"></p>
                <form class="forms-sample" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <select class="form-control" name="depId">
                            @foreach (Department dep in ViewBag.Departments)
                            {
                                if (Model.DepartmentId == dep.Id)
                                {
                                    <option selected value="@dep.Id">@dep.Name</option>
                                }
                                else
                                {
                                    <option value="@dep.Id">@dep.Name</option>
                                }
                            }
                        </select>
                    </div>

                    <div class="form-group">
                        <input asp-for="Number" class="form-control form-control-lg" placeholder="Group Number">
                        <span asp-validation-for="Number" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input asp-for="Capacity" class="form-control form-control-lg" placeholder="Capacity">
                        <span asp-validation-for="Capacity" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-gradient-primary me-2">Submit</button>
                    <a asp-action="Index" class="btn btn-inverse-dark btn-fw">Go back</a>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
