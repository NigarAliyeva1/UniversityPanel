@model List<Group>
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">

               <div class="d-flex justify-content-between">
                    <h4 class="card-title">Groups</h4>
                    <a class="mdi mdi-plus-circle icon-lg" asp-action="Create"></a>
                </div>
                <table id="myTable" class="table">
                    <thead>
                        <tr>
                            <th>Department Name</th>
                            <th>Group number</th>
                            <th>Students Capacity</th>
                            <th>
                                Status
                            </th>
                            <th class="d-flex justify-content-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>


                        @foreach (Group group in Model)
                        {
                            <tr>
                                <td>@group.Department.Name</td>
                                <td>@group.Number</td>
                                <td>@group.Capacity</td>

                                <td>
                                    @if (group.IsDeactive)
                                    {
                                        <span style="width:50px" class="mdi mdi-close-circle-outline icon-md text-danger"></span>
                                    }
                                    else
                                    {
                                        <span style="width:50px" class="mdi mdi-check-circle-outline icon-md text-success"></span>

                                    }
                                </td>
                                <td>
                                    <div class="d-flex justify-content-end">

                                        <a asp-action="Update" asp-route-id="@group.Id" style="width:35px" class="mdi mdi-wrench icon-md text-info"></a>


                                        @if (group.IsDeactive)
                                        {
                                            <a asp-action="Activity" asp-route-id="@group.Id" style="width:35px" class="mdi mdi-toggle-switch-off icon-md text-danger"></a>
                                        }
                                        else
                                        {
                                            
                                            <a asp-action="Activity" asp-route-id="@group.Id" style="width:35px" class="mdi mdi-toggle-switch icon-md text-success"></a>

                                        }


                                    </div>
                                </td>


                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $('#myTable').DataTable({
            dom: 'Bfrtip',
            buttons: [
                'copy', 'csv', 'excel', 'pdf', 'print'
            ]
        });
    });

</script>
