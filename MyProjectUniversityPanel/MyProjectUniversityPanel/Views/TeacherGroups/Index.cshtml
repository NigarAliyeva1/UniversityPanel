@model List<TeacherGroups>

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
  
                <div class="d-flex justify-content-between">
                    <h4 class="card-title">Teacher of Groups</h4>
                    <a class="mdi mdi-plus-circle icon-lg" asp-action="Create"></a>
                </div>

                <table class="table" id="myTable">
                    <thead>
                        <tr>
                            <th>Subject</th>
                            <th>Teacher</th>
                           
                            <th>
                                <div>
                                    Group
                                </div>
                                <div>
                                    Number
                                </div>
                            </th>
                            <th>
                                Status
                            </th>
                            <th class="text-end">
                                Actions
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (TeacherGroups teacherGroup in Model)
                        {
                            <tr>
                       
                                <td>@teacherGroup.Subject</td>
                                <td>@teacherGroup.Teacher.FullName</td>
                                <td>
                                    @teacherGroup.Group.Number
                                </td>
                              
                                
                              
                                <td>
                                    @if (teacherGroup.IsDeactive)
                                    {
                                        <span style="width:30px" class="mdi mdi-close-circle-outline icon-md text-danger"></span>
                                    }
                                    else
                                    {
                                        <span style="width:30px" class="mdi mdi-check-circle-outline icon-md text-success"></span>

                                    }
                                </td>
                                <td>
                                    <div class="d-flex justify-content-md-end">

                                       
                                        <a asp-action="Update" asp-route-id="@teacherGroup.Id" style="width:30px" class="mdi mdi-wrench icon-md text-info"></a>

                                        @if (teacherGroup.IsDeactive)
                                        {
                                            <a asp-action="Activity" asp-route-id="@teacherGroup.Id" style="width:30px" class="mdi mdi-toggle-switch-off icon-md text-danger"></a>
                                        }
                                        else
                                        {

                                            <a asp-action="Activity" asp-route-id="@teacherGroup.Id" style="width:30px" class="mdi mdi-toggle-switch icon-md text-success"></a>

                                        }


                                    </div>
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



<script type="text/javascript">
    $(document).ready(function () {
        $('#myTable').DataTable({
            dom: 'Bfrtip',
            buttons: [
                'copy', 'csv', 'excel', 'pdf', 'print'
            ]
        });
    });

</script>

