@model TeacherGroups
<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Create Detail Of Departments</h4>
                <p class="card-description"></p>
                <form class="forms-sample" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <input asp-for="Subject" class="form-control form-control-lg" placeholder="Subject">
                        <span asp-validation-for="Subject" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <select class="form-control" name="groupId">
                            @foreach (Group group in ViewBag.Groups)
                            {
                                <option value="" selected disabled hidden>--Select Group--</option>
                                <option value="@group.Id">@group.Number</option>
                            }
                        </select>
                    </div>

                    <div class="form-group">
                        <select class="form-control" name="techId">
                            @foreach (Teacher tech in ViewBag.Teachers)
                            {
                                <option value="" selected disabled hidden>--Select Teacher--</option>
                                <option value="@tech.Id">@tech.FullName</option>
                            }
                        </select>
                    </div>
    
                    <button type="submit" class="btn btn-gradient-primary me-2">Submit</button>
                    <a asp-action="Index" class="btn btn-inverse-dark btn-fw">Go back</a>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
